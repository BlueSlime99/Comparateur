<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nutrition_list_details"
    >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/infos_per_100"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:textSize="25dp"
                android:text="RepÃ¨res nutritionnels pour 100g"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/energie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:textSize="25dp"
                app:layout_constraintTop_toBottomOf="@id/infos_per_100"

                />

            <TextView
                android:id="@+id/Acides"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:textSize="25dp"
                app:layout_constraintTop_toBottomOf="@id/energie"
                />

            <TextView
                android:id="@+id/Glucides"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:textSize="25dp"
                app:layout_constraintTop_toBottomOf="@id/Acides"
                />

            <TextView
                android:id="@+id/matiere_grasse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:textSize="25dp"
                app:layout_constraintTop_toBottomOf="@id/Glucides"
                />

            <TextView
                android:id="@+id/Sucres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:textSize="25dp"
                app:layout_constraintTop_toBottomOf="@id/matiere_grasse"
                />

            <TextView
                android:id="@+id/Fibres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:textSize="25dp"
                app:layout_constraintTop_toBottomOf="@id/Sucres"
                />

            <TextView
                android:id="@+id/Proteines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:textSize="25dp"
                app:layout_constraintTop_toBottomOf="@id/Fibres"
                />

            <TextView
                android:id="@+id/sel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:textSize="25dp"
                app:layout_constraintTop_toBottomOf="@id/Proteines"
                />

            <TextView
                android:id="@+id/sodium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:textSize="25dp"
                app:layout_constraintTop_toBottomOf="@id/sel"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>